{
    "name": "phitsol/dashboard",
    "description": "PHP Dashboard with MongoDB backend and slider management",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=7.4",
        "mongodb/mongodb": "^1.17",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "migrate": "php bin/migrate.php up",
        "migrate:down": "php bin/migrate.php down",
        "migrate:status": "php bin/migrate.php status",
        "migrate:make": "php bin/migrate.php make",
        "test": "echo 'No tests configured yet'",
        "validate": "composer validate --strict",
        "syntax-check": "find . -name \"*.php\" -not -path \"./vendor/*\" -not -path \"./node_modules/*\" -exec php -l {} \\;"
    }
}
